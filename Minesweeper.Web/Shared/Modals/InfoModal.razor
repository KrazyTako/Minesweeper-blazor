@inject IJSRuntime jsRuntime

<div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="contactInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactInfoModalLabel">You Won!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Thank you for playing! Consider registering an account to track your performance, compete in the leaderboards, and chat with others for tips!
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private string ModalId = "infoModal";

    public async Task Show()
    {
        await jsRuntime.InvokeVoidAsync("showModal", ModalId, true);
    }
}
